# Database
DATABASE_URL="postgresql://postgres:12345@localhost:5432/TrucksBus"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_SECRET_ACCESS="your-access-token-secret"
JWT_SECRET_REFRESH="your-refresh-token-secret"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-here"
JWT_EXPIRE="15m"
JWT_REFRESH_EXPIRE="7d"

# Server Configuration
PORT=5000
NODE_ENV="development"
CORS_ORIGIN="http://localhost:5173"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# ========================
# E-POSTA AYARLARI (Şifre Sıfırlama için ZORUNLU)
# ========================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
FROM_EMAIL="noreply@trucksbus.com"

# Gmail kimlik bilgileri
# ÖNEMLİ: Normal Gmail şifresi ÇALIŞMAZ! Google App Password kullanın.
EMAIL_USER="your-gmail@gmail.com"
EMAIL_PASSWORD="your-16-digit-app-password"

# Frontend URL - E-posta linklerinde kullanılır
FRONTEND_URL="http://localhost:5174"

# E-posta gönderimi: "true" = simülasyon, "false" = gerçek gönderim
DISABLE_EMAIL="true"

# ========================
# GMAIL UYGULAMA ŞİFRESİ NASIL ALINIR?
# ========================
# 1. https://myaccount.google.com > Security (Güvenlik)
# 2. 2-Step Verification (2 Adımlı Doğrulama) AÇIK olmalı
# 3. App passwords (Uygulama şifreleri) > Generate
# 4. 16 haneli şifreyi EMAIL_PASSWORD'a yapıştırın (boşluksuz)

# File Upload Configuration
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,webp"

# Cloudinary Configuration (Optional)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-key"

# External APIs
GOOGLE_MAPS_API_KEY=""
ELASTICSEARCH_URL="http://localhost:9200"

